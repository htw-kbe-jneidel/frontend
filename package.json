{
  "name": "frontend",
  "repository": "htw-kbe-jneidel/frontend",
  "version": "0.0.1",
  "author": {
    "name": "Jonathan Neidel",
    "email": "git@jneidel.com",
    "url": "https://jneidel.com"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "start": "nodemon dist/app.js --ignore src/ --ignore test/ --trace-sync-io",
    "test": "jest --coverage",
    "build": "npm run build-ts",
    "build-ts": "tsc",
    "build-webpack": "webpack",
    "watch": "concurrently -k -n \"ðŸ”¨,ðŸš€\" \"npm run watch-build\" \"npm run watch-test\" --prefix name",
    "watch-build": "tsc -w",
    "watch-test": "jest --watch",
    "start-prod": "concurrently -n \"frontend\" \"node dist/app.js\" --prefix name",
    "lint": "eslint --fix -c ~/.config/eslint/eslintrc-ts --ext .ts --parser-options \"{ 'ecmaVersion': 10, 'ecmaFeatures': { 'impliedStrict': true }, project: ./tsconfig.json }\" src"
  },
  "dependencies": {
    "body-parser": "^1.19.1",
    "express": "^4.17.2",
    "helmet": "^5.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.9",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
